{
	// 组件自动导入
	"easycom": {
		// 是否开启自动扫描
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			// 自动导入 components 文件夹下的以 Kedou 开头的组件
			"^Kedou(.*)": "@/components/Kedou$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom", // 隐藏默认导航
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/publish/publish",
			"style": {
				"navigationBarTitleText": "发布视频"
			}
		},
		{
			"path": "pages/friend/friend",
			"style": {
				"navigationBarTitleText": "朋友"
			}
		},
		{
			"path": "pages/message/message",
			"style": {
				"navigationBarTitleText": "消息"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我",
				"navigationStyle": "custom"
			}
		},
		{
			"path" : "pages/my/login/login",
			"style" : 
			{
				"navigationStyle": "custom",
				"navigationBarTitleText" : "登陆",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path" : "pages/my/login/loginWithPassword",
			"style" : 
			{
				"navigationStyle": "custom",
				"navigationBarTitleText" : "登陆",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path" : "components/KedouSwiper",
			"style" :
			{
				"navigationStyle": "custom",
				"enablePullDownRefresh" : false
			}
		},
		{
			"path" : "pages/userspace/userspace",
			"style" : 
			{
				"navigationBarTitleText" : "",
				"enablePullDownRefresh" : false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#272b1e",
		"backgroundColor": "#F8F8F8"
	},
